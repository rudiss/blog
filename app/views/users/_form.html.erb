<%= render 'shared/errors', obj: @user%>


<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %> <!-- nao pode ter espaÃ§o depois do form_for alinhar formulario-->
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Nome %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :username, class: "form-control", placeholder: "Seu nome..", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Digite seu email.." %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :senha%>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Sua senha.." %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit(@user.new_record? ? "Cadastrar" :"Editar", class: 'btn btn-primary btn-lg') %>
          </div>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to "Cancel request and return to articles listing", articles_path %>]
    </div>
  </div>
</div>