<h1 align="center">TODOS USUÁRIOS DO BLOG DA NANDA</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.articles.count, "artigos") if user.articles %></small>
            </li>
            <% if logged_in? and current_user.admin? %>
                <li><%= link_to "Deletar esse usuário", user_path(user), method: :delete, data: {confirm: "Tem certeza que deseja deletar o usuário e todas suas publicações?"} %></li>
                </div>
                </div>
                </ul>
            <% end %>
            <%= will_paginate %>
            </div>